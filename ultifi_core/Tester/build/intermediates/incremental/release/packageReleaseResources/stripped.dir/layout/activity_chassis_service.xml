<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chassisServiceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="620dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Chassis Service Test!"
            android:textSize="40sp"
            android:clickable="false"
            android:focusable="false"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="400dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">



                    <TextView
                        android:id="@+id/TCS_topic_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="top | left"
                        android:text="TCS topic:"
                        android:textSize="40sp" />


                    <Button
                        android:id="@+id/subscribe_TCS_button"
                        android:layout_width="180dp"
                        android:layout_height="58dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="订阅TCS😄"
                        android:textAllCaps="false"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/unsubscribe_TCS_button"
                        android:layout_width="180dp"
                        android:layout_height="58dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="取消订阅TCS"
                        android:textAllCaps="false"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/TCS_is_enabled_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="top | left"
                        android:text="TCS_is_enabled:"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/TCS_is_engaged_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="top | left"
                        android:text="TCS_is_engaged:"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/TCS_is_faulted_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="top | left"
                        android:text="TCS_is_faulted:"
                        android:textSize="30sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="400dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ESC_topic_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="top | left"
                        android:text="ESC topic:"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/subscribe_ESC_button"
                        android:layout_width="180dp"
                        android:layout_height="58dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="订阅ESC😍"
                        android:textAllCaps="false"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/unsubscribe_ESC_button"
                        android:layout_width="180dp"
                        android:layout_height="58dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="取消订阅ESC"
                        android:textAllCaps="false"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/ESC_is_enabled_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="top | left"
                        android:text="ESC_is_enabled:"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/ESC_is_engaged_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="top | left"
                        android:text="ESC_is_engaged:"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/ESC_is_faulted_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="top | left"
                        android:text="ESC_is_faulted:"
                        android:textSize="30sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="450dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/update_traction_and_stability"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="top | left"
                        android:text="update TCS and ESC"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/TCS_Enable_and_ESC_Enable_button"
                        android:layout_width="400dp"
                        android:layout_height="58dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="开启TCS和ESC😄"
                        android:textAllCaps="false"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/TCS_Disable_and_ESC_Enable_button"
                        android:layout_width="400dp"
                        android:layout_height="58dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="关闭TCS但开启ESC😂"
                        android:textAllCaps="false"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/TCS_Disable_and_ESC_Disable_button"
                        android:layout_width="400dp"
                        android:layout_height="58dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="关闭TCS和ESC😭"
                        android:textAllCaps="false"
                        android:textSize="30sp" />




                </LinearLayout>

                <LinearLayout
                    android:layout_width="800dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tire_rpc_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="top | left"
                        android:text="Update Tire Request:"
                        android:textSize="40sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/leak_notifier_enable_title"
                            android:layout_width="400dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="top | left"
                            android:text="leak notifier enable:"
                            android:textSize="40sp" >
                        </TextView>


                        <EditText
                            android:id="@+id/leak_notifier_enable_input"
                            android:layout_width="152dp"
                            android:layout_height="64dp"
                            android:hint=""
                            android:inputType="text"
                            android:maxLines="1"
                            android:text="True"
                            android:textSize="30sp" >
                        </EditText>


                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/leak_present_title"
                            android:layout_width="400dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="top | left"
                            android:text="leka present enable:"
                            android:textSize="40sp" >
                        </TextView>

                        <EditText
                            android:id="@+id/leak_present_input"
                            android:layout_width="150dp"
                            android:layout_height="64dp"
                            android:hint=""
                            android:inputType="text"
                            android:maxLines="1"
                            android:text="True"
                            android:textSize="30sp" >
                        </EditText>

                    </LinearLayout>

                    <Button
                        android:id="@+id/update_tire_button"
                        android:layout_width="250dp"
                        android:layout_height="58dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="Update Tire"
                        android:textAllCaps="false"
                        android:textSize="30sp" />



                </LinearLayout>


        </LinearLayout>


        </LinearLayout>

    </LinearLayout>





</androidx.coordinatorlayout.widget.CoordinatorLayout>